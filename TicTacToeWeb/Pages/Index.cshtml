@page
@model IndexModel
@{
    ViewData["Title"] = "TicTacToe";
}

<style>
    .tic-tac-toe-cell {
        width: 150px;
        height: 150px;
        border: solid 1px #000000;
        padding: 0px;
    }

    .tic-tac-toe-button {
        width: 100%;
        height: 100%;
        border-radius: 0px;
        background-color: #ffffff;
    }
</style>

<div class="container" style="width:450px; height:450px; border:solid 1px #000000">
    <div class="row">
        <div class="col tic-tac-toe-cell">
            <a href="#" class="btn btn-secondary tic-tac-toe-button" role="button">@Html.Raw(Model.GetFieldImage(0, 0))</a>
        </div>
        <div class="col tic-tac-toe-cell">
            <a href="#" class="btn btn-secondary tic-tac-toe-button" role="button">@Html.Raw(Model.GetFieldImage(0, 1))</a>

        </div>
        <div class="col tic-tac-toe-cell">
            <a href="#" class="btn btn-secondary tic-tac-toe-button" role="button">@Html.Raw(Model.GetFieldImage(0, 2))</a>
        </div>
    </div>
    <div class="row">
        <div class="col tic-tac-toe-cell">
            <a href="#" class="btn btn-secondary tic-tac-toe-button" role="button">@Html.Raw(Model.GetFieldImage(1, 0))</a>
        </div>
        <div class="col tic-tac-toe-cell">
            <a href="#" class="btn btn-secondary tic-tac-toe-button" role="button">@Html.Raw(Model.GetFieldImage(1, 1))</a>
        </div>
        <div class="col tic-tac-toe-cell">
            <a href="#" class="btn btn-secondary tic-tac-toe-button" role="button">@Html.Raw(Model.GetFieldImage(1, 2))</a>
        </div>
    </div>
    <div class="row">
        <div class="col tic-tac-toe-cell">
            <a href="#" class="btn btn-secondary tic-tac-toe-button" role="button">@Html.Raw(Model.GetFieldImage(2, 0))</a>
        </div>
        <div class="col tic-tac-toe-cell">
            <a href="#" class="btn btn-secondary tic-tac-toe-button" role="button">@Html.Raw(Model.GetFieldImage(2, 1))</a>
        </div>
        <div class="col tic-tac-toe-cell">
            <a href="#" class="btn btn-secondary tic-tac-toe-button" role="button">@Html.Raw(Model.GetFieldImage(2, 2))</a>
        </div>
    </div>
</div>
